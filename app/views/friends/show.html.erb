

<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h2 class="display-5 fw-bold"><%= @friend.name %></h2>
        <p class="col-md-8 fs-5"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %> </p>
        <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-primary" %> 
        <%= link_to "Back to friends", friends_path, class: "btn btn-primary" %><br /><br>
        <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-outline-danger" %>
      </div>
    </div>

